# Custom floating windows {{{
for_window [class="(C|c)hromium" window_role="pop-up"] floating enable, border normal
for_window [class="Pinentry" instance="pinentry"] floating enable
for_window [class="rdesktop"] floating disable, border normal
# }}}

# Move mode {{{
mode "move" {
    bindsym i move up 20px
    bindsym n move left 20px
    bindsym e move down 20px
    bindsym o move right 20px
    bindsym Mod4+m mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Mod4+m focus floating; mode "move"
# }}}
